<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.drombler.fx</groupId>
        <artifactId>drombler-fx-parent</artifactId>
        <version>0.2</version>
        <relativePath>drombler-fx-parent</relativePath>
    </parent>
    <artifactId>drombler-fx-all</artifactId>
    <packaging>pom</packaging>
    
    <name>Drombler FX - All</name>
    <inceptionYear>2012</inceptionYear>
        
    <scm>
        <connection>${scm.connection}</connection>
        <developerConnection>${scm.developerConnection}</developerConnection>
        <url>${scm.url}</url>
      <tag>drombler-fx-all-0.2</tag>
  </scm>

    <properties>
        <scm.connection>${scm.parent.connection}</scm.connection>
        <scm.developerConnection>${scm.parent.developerConnection}</scm.developerConnection>
        <scm.url>${scm.parent.url}</scm.url>
    </properties>
    
    <!-- Not inherited!?? -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>
    
    <modules>
        <module>drombler-fx-parent</module>
        <module>drombler-fx-startup-main</module>
        <module>drombler-fx-core-application</module>
        <module>drombler-fx-core-application-locale-de</module>
        <module>drombler-fx-core-docking</module>
        <module>drombler-fx-core-commons</module>
        <module>drombler-fx-core-action</module>
        <module>drombler-fx-locale-de</module>
        <module>drombler-fx-locale-all</module>
        <!--<module>javafx-2.1.0</module>-->
        <module>drombler-fx-maven-plugin</module>
        <module>drombler-fx-maven-archetype-application</module>
    </modules>
  
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>