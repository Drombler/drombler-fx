#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-clean-install-e-X</actionName>
        <displayName>clean-install-e-X</displayName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
            <goal>-e</goal>
            <goal>-X</goal>
        </goals>
        <properties>
            <jpda.listen>maven</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>   
<!--            <goal>-e</goal>
            <goal>-X</goal>-->
        </goals>
        <properties>
<!--            <exec.args>-jar ${symbol_dollar}{project.build.directory}/deployment/standalone/bin/projectx.jar</exec.args>-->
            <exec.args>-Xbootclasspath/p:${symbol_dollar}{basedir}/lib/jsr-310-ri-0.6.3.jar -classpath ${symbol_dollar}{env.OPENJFX_HOME}/rt/javafx-ui-controls/dist/javafx-ui-controls.jar:${symbol_dollar}{env.OPENJFX_HOME}/artifacts/sdk/rt/lib/jfxrt.jar:${symbol_dollar}{project.build.directory}/deployment/standalone/bin/projectx.jar -Djavafx.verbose=true com.javafx.main.Main</exec.args>
<!--            <exec.longClasspath>true</exec.longClasspath>-->
            <exec.executable>java</exec.executable>
            <exec.classpathScope>runtime</exec.classpathScope>
        </properties>
    </action>
<!--        <action>
        <actionName>run</actionName>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>   
        </goals>
        <properties>
            <exec.args>-classpath %classpath org.richclientplatform.startup.main.Main</exec.args>
                <exec.longClasspath>true</exec.longClasspath>
            <exec.executable>java</exec.executable>
            <exec.classpathScope>runtime</exec.classpathScope>
